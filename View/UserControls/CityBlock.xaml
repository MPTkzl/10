<UserControl x:Class="WpfApp1.View.UserControls.CityBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" Width="195">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="{DynamicResource hoverColor}"/>
        <Grid Grid.Row="1" Background="{DynamicResource secondColor}"/>
        <TextBlock Text="Северобайкальск" FontSize="16" Foreground="White" TextAlignment="Center" Grid.Row="0" FontFamily="{StaticResource mainFontFamily}" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock TextWrapping="Wrap" Text="Северобайкальск" FontSize="20" Foreground="White" TextAlignment="Center" Grid.Row="1" FontFamily="{StaticResource mainFontFamily}" VerticalAlignment="Center"/>
        <Button Content="x" HorizontalAlignment="Right" VerticalAlignment="Top" Background="#00000000" BorderBrush="#00000000" FontSize="11"/>
    </Grid>
</UserControl>
